\newcommand\calcdettwo{\@ifstar{\@calcdettwo@star}{\@calcdettwo@no@star}}


% We use the macros for the colinearity.

%   #1 : option for the formatting
%
%   #2  #3		a  b
%   #4  #5		c  d

\newcommand\@calcdettwo@no@star[5][std]{%
    \IfEqCase{#1}{%
% WARNING !
%
%   #1  #3		x  x'
%   #2  #4      y  y'
%   
%   #5 : symbol for the product
        {exp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\,}%
        }{cexp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\cdot}%
        }{texp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\times}%
% WARNING !
%
%   #1 : option for the formatting
%
%   #2  #5		u  v
%   
%   #3  #6		x  x'
%   #4  #7      y  y'
        }{std}{%
            \@abstract@calcdetplane@no@star{novec}%
                                           {}{#2}{#4}%
                                           {}{#3}{#5}%
        }%
    }[
    	\PackageError{lymath}{unknown option}%
                             {You can use std (default), exp, cexp or sexp.}
    ]%
}


\newcommand\@calcdettwo@star[5][std]{%
    \IfEqCase{#1}{%
% WARNING !
%
%   #1  #3		x  x'
%   #2  #4      y  y'
%   
%   #5 : symbol for the product
        {exp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\times}%
        }{cexp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\cdot}%
        }{sexp}{%
            \@abstract@valdetplane{#2}{#4}{#3}{#5}{\,}%
% WARNING !
%
%   #1 : option for the formatting
%
%   #2  #5		u  v
%   
%   #3  #6		x  x'
%   #4  #7      y  y'
        }{std}{%
            \@abstract@calcdetplane@star{novec}%
                                        {}{#2}{#4}%
                                        {}{#3}{#5}%
        }%
    }%
}



