%   #1 : option for the formatting
%
%   #2  #5		u  v
%   
%   #3  #6		x  x'
%   #4  #7      y  y'

\newcommand\colicriteria[7][vec]{%
    \IfEqCase{#1}{%
        {vec}{}%
        {novec}{}%
    }[
    	\PackageError{tnsgeo}{unknown option}%
                             {You can use vec (default) or novec.}
    ]%
    \tns@det@plane@deco@cross{#1}%
                             {#2}{#3}{#4}%
                             {#5}{#6}{#7}%
}


\newcommand\vcolicriteria[7][vec]{%
    \colicriteria[#1]{\vect{#2}}{#3}{#4}%
                     {\vect{#5}}{#6}{#7}%
}



%   #1 : option for the formatting
