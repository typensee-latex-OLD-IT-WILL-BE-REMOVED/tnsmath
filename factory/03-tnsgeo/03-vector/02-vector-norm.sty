\DeclarePairedDelimiter\norm{\lVert}{\rVert}%

\let\tnsgeo@old@norm\norm


\renewcommand\norm{\@ifstar{\tnsgeo@norm@star}{\tnsgeo@norm@no@star}}

\newcommand\tnsgeo@norm@star[1]{%
    \tnsgeo@old@norm{#1}%
}

\newcommand\tnsgeo@norm@no@star[1]{%
    \tnsgeo@old@norm*{#1}%
}


\newcommand\vnorm[1]{%
    \norm*{\vect{#1}}%
}
