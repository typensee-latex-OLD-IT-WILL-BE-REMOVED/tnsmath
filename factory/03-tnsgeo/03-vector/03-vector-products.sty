% CROSS PRODUCT

%    #1 : option for the operator
%    #2 : 1st vector
%    #3 : 2nd vector
\newcommand\crossprod[3][w]{%
    #2 %
    \IfEqCase{#1}{%
        {w}{\wedge}
        {t}{\times}
    }[%
        \PackageError{tnsgeo}{unknown option}%
                             {You can use w (default) or t.}%
    ]%
    #3
}

%    #1 : option for the operator
%    #2 : 1st vector
%    #3 : 2nd vector
\newcommand\vcrossprod[3][w]{%
    \crossprod[#1]{\vect{#2}}{\vect{#3}}%
}



