\RequirePackage[f]{esvect}


% == DEFINITIONS == %

\newcommand\@no@point[1]{%
	\if#1i%
		\imath%
	\else%
		\if#1j%
			\jmath%
		\else%
			#1
		\fi%
	\fi%
}

\newcommand\vect{\@ifstar{\@vect@star}{\@vect@no@star}}
\newcommand*\@vect@star[1]{\vv*{\@no@point{#1}}}
\newcommand*\@vect@no@star[1]{\vv{\@no@point{#1}}}
