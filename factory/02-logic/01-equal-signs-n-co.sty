% Standard (none) equations

\newcommand\eqdef{\@ifstar{\@eqdef@star}{\@eqdef@no@star}}

\newcommand\@eqdef@star{%
	\coloneqq%
}

\newcommand\@eqdef@no@star{%
	\mathrel{\overset{\mathrm{\text{\texteqdef}}}{=}}%
}


\newcommand\eqid{\@ifstar{\@eqid@star}{\@eqid@no@star}}

\newcommand\@eqid@star{%
	\rightleftharpoons%
}

\newcommand\@eqid@no@star{%
	\mathrel{\overset{\mathrm{\text{\texteqid}}}{=}}%
}


\newcommand\eqtest{%
	\mathrel{\overset{\mathrm{?}}{=}}%
}


\newcommand\eqhyp{%
	\mathrel{\overset{\mathrm{\text{\textineqhyp}}}{=}}%
}


\newcommand\eqcond{%
	\mathrel{\overset{\mathrm{\text{\textineqcond}}}{=}}%
}


\newcommand\neqtest{
	\mathrel{\overset{\mathrm{?}}{\neq}}%
}

\newcommand\neqhyp{%
	\mathrel{\overset{\mathrm{\text{\textineqhyp}}}{\neq}}%
}

\newcommand\neqcond{%
	\mathrel{\overset{\mathrm{\text{\textineqcond}}}{\neq}}%
}


% Standard inequations

\newcommand\leqtest{%
	\stackrel{\text{?}}{\leq}%
}

\newcommand\leqhyp{%
	\stackrel{\text{\text{\textineqhyp}}}{\leq}%
}

\newcommand\leqcond{%
	\stackrel{\text{\text{\textineqcond}}}{\leq}%
}


\newcommand\ltest{%
	\mathrel{\overset{\mathrm{?}}{{<}\vphantom{\leq}}}%
}

\newcommand\lhyp{%
	\mathrel{\overset{\mathrm{\text{\textineqhyp}}}{{<}\vphantom{\leq}}}%
}

\newcommand\lcond{%
	\mathrel{\overset{\mathrm{\text{\textineqcond}}}{{<}\vphantom{\leq}}}%
}


\newcommand\geqtest{%
	\mathrel{\overset{\mathrm{?}}{\geq}}%
}

\newcommand\geqhyp{%
	\mathrel{\overset{\mathrm{\text{\textineqhyp}}}{\geq}}%
}

\newcommand\geqcond{%
	\stackrel{\text{\text{\textineqcond}}}{\geq}%
}


\newcommand\gtest{%
	\mathrel{\overset{\mathrm{?}}{{>}\vphantom{\leq}}}
}

\newcommand\ghyp{%
	\mathrel{\overset{\mathrm{\text{\textineqhyp}}}{{>}\vphantom{\leq}}}
}

\newcommand\gcond{%
	\mathrel{\overset{\mathrm{\text{\textineqcond}}}{{>}\vphantom{\leq}}}
}

