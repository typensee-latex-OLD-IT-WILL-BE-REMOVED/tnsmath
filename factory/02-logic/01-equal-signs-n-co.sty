\newcommand{\my@hat@eq}[2]{%
  \begingroup
  \sbox\z@{$\m@th#1=$}%
  \ooalign{%
    \hidewidth\raisebox{-0.3\ht\z@}{$\m@th#1\widehat{}$}\hidewidth\cr
    \box\z@\cr
  }%
  \endgroup
}

