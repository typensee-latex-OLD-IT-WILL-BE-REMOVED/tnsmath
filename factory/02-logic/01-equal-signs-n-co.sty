% Standard (none) equations

\newcommand\eqdef{\@ifstar{\@eqdef@pre@star}{\@eqdef@no@star}}

\newcommand\@eqdef@no@star{%
    \mathrel{\overset{\mathrm{\text{\textopdef}}}{=}}%
}

\newcommand\@eqdef@pre@star{\@ifstar{\@eqdef@star@star}{\@eqdef@star}}

\newcommand\@eqdef@star{%
    \coloneqq%
}

% Source: https://tex.stackexchange.com/a/510011/6880

\providecommand\@eqdef@star@star{\mathrel{\mathpalette\my@hat@eq\relax}}
\newcommand{\my@hat@eq}[2]{%
  \begingroup
  \sbox\z@{$\m@th#1=$}%
  \ooalign{%
    \hidewidth\raisebox{-0.3\ht\z@}{$\m@th#1\widehat{}$}\hidewidth\cr
    \box\z@\cr
  }%
  \endgroup
}

