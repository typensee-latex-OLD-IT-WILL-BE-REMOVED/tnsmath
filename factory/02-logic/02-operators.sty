\usepackage{mathtools}


% == DEFINITIONS == %

% Horizontal versions

\newcommand\iffcond{%
	\mathrel{\overset{\mathrm{\text{\textopcond}}}{\iff}}%
}

\newcommand\iffhyp{%
	\mathrel{\overset{\mathrm{\text{\textophyp}}}{\iff}}%
}

\newcommand\ifftest{%
	\mathrel{\overset{\mathrm{?}}{\iff}}%
}


\newcommand\impliescond{%
	\mathrel{\overset{\mathrm{\text{\textopcond}}}{\implies}}%
}

\newcommand\implieshyp{%
	\mathrel{\overset{\mathrm{\text{\textophyp}}}{\implies}}%
}

\newcommand\impliestest{%
	\mathrel{\overset{\mathrm{?}}{\implies}}%
}


\newcommand\liesimp{%
	\mathrel{\Longleftarrow}%
}


\newcommand\liesimpcond{%
	\mathrel{\overset{\mathrm{\text{\textopcond}}}{\liesimp}}%
}

\newcommand\liesimphyp{%
	\mathrel{\overset{\mathrm{\text{\textophyp}}}{\liesimp}}%
}

\newcommand\liesimptest{%
	\mathrel{\overset{\mathrm{?}}{\liesimp}}%
}


% Vertical versions 

\newcommand\vliesimp{%
