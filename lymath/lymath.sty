% dd, partial and pp usefull operators
    \newcommand{\@diffOpe}[3]{%
        #3%
        \IfStrEq{#1}{0}{}{^{#1}\!}%
        \IfBeginWith{#2}{f}{\!}{}%
        \hspace{0.07em}#2%
    }

